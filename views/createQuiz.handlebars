<form class="new-quiz-form">
  <div class="column">
    <h2 class="title">Create a Question</h2>
    </br>
    <label for="question">Please enter a question:</label>
    <input type="text" class="form-control" id="post-question" name="post-question" placeholder="E.g. What should you do during an earthquake?" required/>
  </div>
  </br>
  <label for="answers">Pleae enter the four answers below and select the correct answer:</label>
  <div class="input-group">
    <div class="input-group-text">
      <span class="input-group-text" id="inputGroup-sizing-default">A.</span>
      <input type="text" id="answer-one" class="form-control" aria-label="Text input with radio button" required>
      <input class="form-check-input mt-0" type="radio" for="answer-one" name="correct-answer" value=""
        aria-label="Radio button"><label>Correct answer</label>
    </div>
    <div class="input-group-text">
      <span class="input-group-text" id="inputGroup-sizing-default">B.</span>
      <input type="text" id="answer-two" class="form-control" aria-label="Text input with radio button" required>
      <input class="form-check-input mt-0" type="radio" for="answer-two" name="correct-answer" value=""
        aria-label="Radio button"><label>Correct answer</label>
    </div>
    <div class="input-group-text">
      <span class="input-group-text" id="inputGroup-sizing-default">C.</span>
      <input type="text" id="answer-three" class="form-control" aria-label="Text input with radio button" required>
      <input class="form-check-input mt-0" type="radio" for="answer-three" name="correct-answer" value=""
        aria-label="Radio button"><label>Correct answer</label>
    </div>
    <div class="input-group-text">
      <span class="input-group-text" id="inputGroup-sizing-default">D.</span>
      <input type="text" id="answer-four" class="form-control" aria-label="Text input with radio button" required>
      <input class="form-check-input mt-0" type="radio" for="answer-four" name="correct-answer" value=""
        aria-label="Radio button"><label>Correct answer</label>
    </div>
  </div>
  </br>
  <div style="text-align: center;"> 
    <button type="submit" class="btn btn-warning btn-lg">Submit quiz</button>
  </div>
</form>



<script src="./js/createquiz.js"></script>